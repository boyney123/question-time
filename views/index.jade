extends layout

block content
    img(src="/assets/bunting.png")

    div.row
        div.small-12.columns
    
            h3.text-center.heading.main-heading Welcome to the Great British Bake Off
            h3.text-center.heading.sub-heading.mb10 CTM Annual Conference 2015

            a(href='/question')
                button.expand.bake-green
                    i.fa.fa-question-circle
                    span.block.mt5 Ask Paul ‘Hollywood’ Galligan a question

            a(href='/question-matthew')
                button.expand.bake-green(style="background:#C36173")
                    i.fa.fa-question-circle
                    span.block.mt5 Ask Matthew Donaldson a question

            a(href='/feel')
                button.expand.bake.blue
                    i.fa.fa-cloud
                    span.block.mt5 Bake us a word cloud


